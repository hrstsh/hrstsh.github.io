---
import Layout from '../layouts/Layout.astro';
import { recentUpdates } from '../data/recent';

function formatDate(iso: string): string {
  const [y, m, d] = iso.split('-');
  return `${y}.${m}.${d}`;
}
---

<Layout title="hrの備忘録" description="いろいろ雑多メモ。チートシート、ツール、Tipsなど開発や日常で役立つ情報をまとめています。">
  <main>
    <section class="hero">
      <div class="hero-bg" aria-hidden="true"></div>
      <div class="hero-inner">
        <h1>hr の 備忘録</h1>
        <p class="subtitle">いろいろ雑多メモ</p>
      </div>
    </section>

    <div class="page-body">
      <div class="content-column">
    <section class="content content-section">
      <div class="content-header">
        <h2><span class="content-icon" aria-hidden="true">◆</span>Try &amp; Tips</h2>
        <p>試してみたことや、ブラウザ・開発で使えるちょっとしたテクニック。</p>
      </div>
      <div class="tool-cards">
        <a href="/tried" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>やってみた</h3>
          <p>実際に試したことの手記やレポート</p>
        </a>
        <a href="/tips" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>Tips</h3>
          <p>ブックマークレット、Chrome拡張、macOSの便利機能など</p>
        </a>
      </div>
    </section>

    <section class="content content-section">
      <div class="content-header">
        <h2><span class="content-icon" aria-hidden="true">◇</span>ツール</h2>
        <p>ブラウザ上で動作する便利ツール。</p>
      </div>
      <div class="tool-cards">
        <a href="/tools/styled-text-replacer" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>スタイル付きテキスト置換</h3>
          <p>書式を維持したまま文字列を置換</p>
        </a>
        <a href="/tools/sql-formatter" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>SQL整形ツール</h3>
          <p>MySQL、PostgreSQL、SQL Server 対応</p>
        </a>
        <a href="/tools/zero-width-breaker" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>ツイートのリンク化回避ツール</h3>
          <p>ツイートのリンク化を防ぐ</p>
        </a>
        <a href="/tools/exif-editor" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>写真のメタデータ（EXIF）編集</h3>
          <p>撮影日時・カメラ情報をブラウザで編集</p>
        </a>
      </div>
    </section>

    <section class="content content-section">
      <div class="content-header">
        <h2><span class="content-icon" aria-hidden="true">⌘</span>チートシート</h2>
        <p>よく使うコマンドやリファレンス。</p>
      </div>
      <div class="tool-cards">
        <a href="/cheatsheets/git-cheatsheet" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>Gitコマンドチートシート</h3>
          <p>よく使うコマンドを基礎から応用まで</p>
        </a>
        <a href="/cheatsheets/sql-cheatsheet" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>SQL基本コマンド集</h3>
          <p>DB操作でよく叩くやつ</p>
        </a>
        <a href="/cheatsheets/docker-cheatsheet" class="tool-card">
          <span class="tool-card-arrow" aria-hidden="true">→</span>
          <h3>Dockerコマンドチートシート</h3>
          <p>コンテナまわりで使うコマンド</p>
        </a>
      </div>
    </section>
      </div>

      <aside class="recent-updates">
        <h2 class="recent-updates-title">
          <span class="recent-updates-icon" aria-hidden="true">✦</span>
          最近の更新
        </h2>
        <ul>
          {recentUpdates.slice(0, 3).map((item) => (
            <li>
              <a href={item.href}>
                {item.showNew && <span class="new-badge">NEW</span>}
                {item.title}
              </a>
              <time datetime={item.date}>{formatDate(item.date)}</time>
            </li>
          ))}
        </ul>
      </aside>
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 860px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  @media (min-width: 1100px) {
    main {
      max-width: 1180px; /* 860px コンテンツ + 280px サイドバー + gap */
    }
  }

  .page-body {
    margin-top: 0;
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 1100px) {
    .page-body {
      flex-direction: row;
      gap: 2rem;
      align-items: flex-start;
      justify-content: center;
    }
  }

  .content-column {
    min-width: 0;
    order: 1;
  }

  @media (min-width: 1100px) {
    .content-column {
      order: -1;
      flex: 0 0 860px; /* 他ページと同じコンテンツ幅・固定 */
    }
  }

  .recent-updates {
    order: -1; /* 縦表示時はチートシートの上に */
    padding: 1.5rem 1.25rem;
    background: linear-gradient(135deg, #ffffff 0%, #faf9ff 100%);
    border: 1px solid rgba(102, 126, 234, 0.25);
    border-left: 4px solid var(--color-primary);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md), 0 4px 20px rgba(102, 126, 234, 0.15);
    margin-bottom: 2rem;
  }

  @media (min-width: 1100px) {
    .recent-updates {
      order: 0;
      margin-bottom: 0;
    }
  }

  .recent-updates-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid transparent;
    border-image: linear-gradient(90deg, var(--color-primary), var(--color-accent)) 1;
  }

  .recent-updates-icon {
    color: var(--color-accent);
    font-size: 1.1em;
  }

  .new-badge {
    display: inline-block;
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    color: #fff;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    padding: 0.15em 0.5em;
    border-radius: 4px;
    margin-right: 0.5em;
    vertical-align: middle;
    line-height: 1.4;
  }

  .recent-updates ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .recent-updates li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .recent-updates li:last-child {
    border-bottom: none;
  }

  .recent-updates a {
    display: block;
    font-size: 0.95rem;
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .recent-updates a:hover {
    color: var(--color-accent);
  }

  .recent-updates time {
    display: block;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-top: 0.25rem;
  }

  @media (min-width: 1100px) {
    .recent-updates {
      width: 280px;
      flex-shrink: 0;
      position: sticky;
      top: 2rem;
      margin-top: 0;
    }
  }

  .hero {
    position: relative;
    width: 100vw;
    left: 50%;
    margin-left: -50vw;
    margin-top: -3rem;
    text-align: center;
    padding: 4rem 1.5rem 5rem;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      /* 下方向に徐々に本文エリアの色へフェード */
      linear-gradient(180deg,
        rgba(0, 0, 0, 0.08) 0%,
        transparent 40%,
        transparent 55%,
        rgba(248, 250, 252, 0.5) 75%,
        var(--color-bg) 100%
      ),
      /* サイトの紫トーンで馴染ませる */
      linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, transparent 40%, rgba(118, 75, 162, 0.05) 100%),
      url('/top_hero.png') center / cover no-repeat;
  }

  .hero-inner {
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 50%, #ddd6fe 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero .subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.85);
    font-weight: 500;
  }

  .content-section {
    padding: 2rem 1.5rem 2.5rem;
    margin-bottom: 2rem;
    background: linear-gradient(135deg, #ffffff 0%, #fafbff 100%);
    border: 1px solid rgba(102, 126, 234, 0.15);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm), 0 2px 12px rgba(102, 126, 234, 0.08);
  }

  .content-section:last-of-type {
    margin-bottom: 0;
  }

  .content-header {
    margin-bottom: 1.5rem;
  }

  .content-header h2 {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.01em;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .content-icon {
    color: var(--color-accent);
    -webkit-text-fill-color: var(--color-accent);
    opacity: 0.95;
  }

  .content-header p {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0;
    padding-left: 1.5rem;
  }

  .tool-cards {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  }

  .tool-card {
    position: relative;
    display: block;
    padding: 1.5rem 1.75rem 1.5rem 2rem;
    background: linear-gradient(135deg, #ffffff 0%, #fcfcff 100%);
    border: 1px solid rgba(102, 126, 234, 0.2);
    border-left: 4px solid var(--color-primary);
    border-radius: var(--radius-md);
    text-decoration: none;
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal),
      border-color var(--transition-normal), border-left-color var(--transition-normal);
  }

  .tool-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-hover), 0 4px 16px rgba(102, 126, 234, 0.2);
    border-color: rgba(102, 126, 234, 0.4);
    border-left-color: var(--color-accent);
  }

  .tool-card-arrow {
    position: absolute;
    top: 1.5rem;
    right: 1.25rem;
    font-size: 1rem;
    color: var(--color-primary);
    opacity: 0.6;
    transition: opacity var(--transition-fast), transform var(--transition-fast);
  }

  .tool-card:hover .tool-card-arrow {
    opacity: 1;
    transform: translateX(2px);
  }

  .tool-card h3 {
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    transition: color var(--transition-fast);
  }

  .tool-card:hover h3 {
    color: var(--color-accent);
  }

  .tool-card p {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }
</style>
