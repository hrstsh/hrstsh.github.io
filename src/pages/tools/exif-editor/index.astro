      GPSImgDirectionRef: '画像方向の基準',
      GPSImgDirection: '画像の撮影方向',
      GPSMapDatum: '測地系（WGS-84等）',
      GPSDestLatitudeRef: '目的地緯度の南北',
      GPSDestLatitude: '目的地緯度',
      GPSDestLongitudeRef: '目的地経度の東西',
      GPSDestLongitude: '目的地経度',
