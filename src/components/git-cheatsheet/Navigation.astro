---
interface Props {
  currentPage: 'basics' | 'branches' | 'remote' | 'advanced' | 'tips';
}

const { currentPage } = Astro.props;

const pages = [
  { id: 'basics', title: '基礎編', url: '/cheatsheets/git-cheatsheet/basics' },
  { id: 'branches', title: 'ブランチ・マージ編', url: '/cheatsheets/git-cheatsheet/branches' },
  { id: 'remote', title: 'リモート・一時保存編', url: '/cheatsheets/git-cheatsheet/remote' },
  { id: 'advanced', title: 'タグ・高度な操作編', url: '/cheatsheets/git-cheatsheet/advanced' },
  { id: 'tips', title: '設定・Tips編', url: '/cheatsheets/git-cheatsheet/tips' },
];

const currentIndex = pages.findIndex(p => p.id === currentPage);
const prevPage = currentIndex > 0 ? pages[currentIndex - 1] : null;
const nextPage = currentIndex < pages.length - 1 ? pages[currentIndex + 1] : null;
---

<nav class="page-navigation">
  <div class="nav-buttons">
    {prevPage ? (
      <a href={prevPage.url} class="nav-button prev">
        <span class="nav-arrow">←</span>
        <span class="nav-label">
          <span class="nav-direction">前へ</span>
          <span class="nav-title">{prevPage.title}</span>
        </span>
      </a>
    ) : (
      <div class="nav-button-placeholder"></div>
    )}

    <a href="/cheatsheets/git-cheatsheet" class="nav-button index">
      <span class="nav-label">目次</span>
    </a>

    {nextPage ? (
      <a href={nextPage.url} class="nav-button next">
        <span class="nav-label">
          <span class="nav-direction">次へ</span>
          <span class="nav-title">{nextPage.title}</span>
        </span>
        <span class="nav-arrow">→</span>
      </a>
    ) : (
      <div class="nav-button-placeholder"></div>
    )}
  </div>
</nav>

<style>
  .page-navigation {
    margin: 2rem 0;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 8px;
  }

  .nav-buttons {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1rem;
    align-items: center;
  }

  .nav-button {
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    background: #fff;
    border: 2px solid #e0e0e0;
    border-radius: 6px;
    text-decoration: none;
    color: #333;
    transition: all 0.2s ease;
  }

  .nav-button:hover {
    border-color: #667eea;
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(102, 126, 234, 0.15);
  }

  .nav-button.prev {
    justify-self: start;
  }

  .nav-button.next {
    justify-self: end;
    flex-direction: row-reverse;
  }

  .nav-button.index {
    justify-self: center;
    padding: 0.75rem 1.5rem;
    background: #667eea;
    color: #fff;
    border-color: #667eea;
    font-weight: 600;
  }

  .nav-button.index:hover {
    background: #5568d3;
    border-color: #5568d3;
  }

  .nav-arrow {
    font-size: 1.2rem;
    color: #667eea;
    margin: 0 0.5rem;
  }

  .nav-label {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .nav-direction {
    font-size: 0.75rem;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: #333;
  }

  .nav-button-placeholder {
    /* Spacer for grid alignment */
  }

  @media (max-width: 768px) {
    .nav-buttons {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .nav-button.prev,
    .nav-button.next,
    .nav-button.index {
      justify-self: stretch;
    }

    .nav-button-placeholder {
      display: none;
    }
  }
</style>
