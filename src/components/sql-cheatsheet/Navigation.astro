---
interface Props {
  currentPage: 'index' | 'basics' | 'joins' | 'manipulation' | 'advanced';
}

const { currentPage } = Astro.props;
---

<nav class="page-nav">
  <a href="/cheatsheets/sql-cheatsheet" class:list={['nav-link', { active: currentPage === 'index' }]}>
    目次
  </a>
  <a href="/cheatsheets/sql-cheatsheet/basics" class:list={['nav-link', { active: currentPage === 'basics' }]}>
    基礎・データ取得
  </a>
  <a href="/cheatsheets/sql-cheatsheet/joins" class:list={['nav-link', { active: currentPage === 'joins' }]}>
    結合・サブクエリ
  </a>
  <a href="/cheatsheets/sql-cheatsheet/manipulation" class:list={['nav-link', { active: currentPage === 'manipulation' }]}>
    データ操作
  </a>
  <a href="/cheatsheets/sql-cheatsheet/advanced" class:list={['nav-link', { active: currentPage === 'advanced' }]}>
    テーブル操作・応用
  </a>
</nav>

<style>
  .page-nav {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    padding: 1rem 0;
    margin: 2rem 0;
    border-top: 2px solid #eee;
    border-bottom: 2px solid #eee;
  }

  .nav-link {
    padding: 0.5rem 1rem;
    background: #f8f9fa;
    color: #667eea;
    text-decoration: none;
    border-radius: 4px;
    font-size: 0.9rem;
    transition: background 0.2s, color 0.2s;
  }

  .nav-link:hover {
    background: #e9ecef;
  }

  .nav-link.active {
    background: #667eea;
    color: white;
    font-weight: 600;
  }
</style>
