{
  "manifest_version": 3,
  "name": "Twitter Image Only Filter",
  "version": "1.0",
  "description": "X(Twitter)で画像・動画付きツイートだけを表示",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
